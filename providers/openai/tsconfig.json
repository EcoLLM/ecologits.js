{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./es",
    "target": "ESNext",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "preserveWatchOutput": true,
    "removeComments": true
  }
}
